@using Nop.Core;
@using Nop.Core.Infrastructure;
@using SevenSpikes.Nop.Plugins.QuickView.Models;

@model QuickViewModel

@{
    Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Styles/common.css");
    Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Themes/" + Model.Theme + "/Content/QuickView.css");

    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    if (supportRtl)
    {
        Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Styles/common.rtl.css");
        Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Themes/" + Model.Theme + "/Content/QuickView.rtl.css");
    }

    Html.AddCssFileParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Styles/cloud-zoom.css");
    Html.AddCssFileParts("~/Content/fancybox/jquery.fancybox-1.3.4.css");
    Html.AddCssFileParts("~/Scripts/fineuploader/fineuploader-4.2.2.min.css");

    Html.AddScriptParts("~/Scripts/kendo/2014.1.318/kendo.core.min.js");
    Html.AddScriptParts("~/Scripts/kendo/2014.1.318/kendo.userevents.min.js");
    Html.AddScriptParts("~/Scripts/kendo/2014.1.318/kendo.draganddrop.min.js");
    Html.AddScriptParts("~/Scripts/kendo/2014.1.318/kendo.window.min.js");

    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/SevenSpikesExtensions.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Scripts/jquery.json-2.2.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Scripts/cloud-zoom.1.0.2.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Nop.Plugins.QuickView/Scripts/QuickView.min.js");
    Html.AddScriptParts("~/Scripts/jquery.fancybox-1.3.4.pack.js");
    Html.AddScriptParts("~/Scripts/fineuploader/jquery.fineuploader-4.2.2.min.js");
}

<div class="quickViewData" data-productselector="@Model.QuickViewSettingsModel.ProductItemSelector"
     data-productselectorchild="@Model.QuickViewSettingsModel.ProductItemSelectorChild"
     data-retrievequickviewurl="@Url.RouteUrl("QuickViewData")"
     data-quickviewbuttontext="@T("SevenSpikes.QuickView.Admin.Settings.QuickViewButtonText")"
     data-quickviewbuttontitle="@T("SevenSpikes.QuickView.Admin.Settings.QuickViewButtonTitle")"
     data-isquickviewpopupdraggable="@Model.QuickViewSettingsModel.MakeQuickViewPopupDraggable"
     data-enablequickviewpopupoverlay="@Model.QuickViewSettingsModel.EnableQuickViewPopupOverlay"
     data-accordionpanelsheightstyle="@Model.QuickViewSettingsModel.AccordionPanelsHeightStyle">
</div>